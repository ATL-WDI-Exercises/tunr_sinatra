<h2>Songs <a href="/songs/new">(+)</a></h2>

<form>
  <div class="search">
    <input class="searchbox-query"
           type="search"
           name="title"
           value="<%= @search_title %>"
           placeholder="Enter a song name here"/>
    <input class="btn search-btn success"
           type="submit" value="Search">
    <button class="btn search-btn delete"><a class="clear" href="/songs">Clear</a></button>
  </div>
</form>

<ul>
  <% @songs.each do |song| %>
    <li>
      <a href="/songs/<%= song.id %>">
        <%= song.title %> - <%= song.artist.name %>
      </a>
    </li>
  <% end %>
</ul>
