<h2>Edit Song</h2>

<form action="/songs/<%= @song.id %>" method="post">
  <input type="hidden" name="_method" value="put">

  <label for="song[title]">Title:</label>
  <input name="song[title]" value="<%= @song.title %>">

  <label for="song[album]">Album:</label>
  <input name="song[album]" value="<%= @song.album %>">

  <label for="song[preview_url]">Preview URL:</label>
  <input name="song[preview_url]" value="<%= @song.preview_url %>">

  <label for="song[artist_id]">Artist:</label>
  <div class="styled-select">
    <select name="song[artist_id]">
      <optgroup>
        <% Artist.order(:name).each do |artist| %>
          <option value="<%= artist.id%>"
            <%= 'selected="selected"' if @song.artist.id == artist.id %>
            ><%= artist.name %>
          </option>
        <% end %>
      </optgroup>
    </select>
  </div>

  <input type="submit" class="btn success" value="Save">
</form>

<form action="/songs/<%= @song.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input class="btn delete" type="submit" value="Delete!">
</form>
